{
  "compilerOptions": {
    "target": "es5",                                  
    "lib": ["es6"],                                      
    "module": "commonjs",                               
    "rootDir": "src",                                    
    "resolveJsonModule": true,                          
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                                   
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/@types",
      "./@types",
      "./node_modules/@types"
    ]                         
  }
}
